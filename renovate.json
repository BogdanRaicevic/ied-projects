{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageManager": "pnpm",
  "pnpm": {
    "enabled": true
  },
  "dependencyDashboard": true,
  "enabledManagers": ["pnpm"],
  "monorepo": {
    "enabled": true
  },
  "baseBranches": ["main"],
  "ignorePaths": ["**/dist/**", "**/build/**"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "minor and patch updates",
      "groupSlug": "minor-patch"
    }
  ],
  "labels": ["dependencies"]
}
